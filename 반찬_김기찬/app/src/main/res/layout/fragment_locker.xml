<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/locker_locker_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="보관함"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="50dp"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/locker_login_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인"
        android:textColor="@color/flo"
        android:textSize="14dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/locker_locker_tv"
        app:layout_constraintBottom_toBottomOf="@id/locker_locker_tv"/>
    
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/locker_seg_tb"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        app:tabIndicatorFullWidth="false"
        app:tabSelectedTextColor="@color/flo"
        app:tabIndicatorColor="@color/flo"
        app:tabRippleColor="@color/transparent"
        android:layout_marginStart="10dp"
        app:tabTextAppearance="@style/tab_text_style"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/locker_locker_tv"/>

    <LinearLayout
        android:id="@+id/locker_select_all_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/locker_seg_tb"
        app:layout_constraintTop_toBottomOf="@id/locker_seg_tb">

        <ImageView
            android:id="@+id/locker_select_all_iv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/btn_playlist_select_off"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/locker_select_all_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전체선택"
            app:layout_constraintStart_toEndOf="@+id/locker_select_all_iv"
            app:layout_constraintTop_toTopOf="@id/locker_select_all_iv"
            app:layout_constraintBottom_toBottomOf="@id/locker_select_all_iv"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginStart="25dp"
        app:layout_constraintStart_toEndOf="@id/locker_select_all_ll"
        app:layout_constraintTop_toTopOf="@id/locker_select_all_ll"
        app:layout_constraintBottom_toBottomOf="@id/locker_select_all_ll">

        <ImageView
            android:id="@+id/locker_play_all_iv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/icon_browse_arrow_right"/>

        <TextView
            android:id="@+id/locker_play_all_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전체듣기"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="편집"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/locker_select_all_ll"
        app:layout_constraintBottom_toBottomOf="@id/locker_select_all_ll"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/locker_viewpager_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/locker_select_all_ll"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>