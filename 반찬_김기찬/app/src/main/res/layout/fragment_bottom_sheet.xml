<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context=".BottomSheetFragment"
    android:background="@color/select_color">

    <TextView
        android:id="@+id/bottom_sheet_play_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:text="듣기"
        android:background="@color/transparent"
        android:textSize="12dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bottom_sheet_playlist_tv"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/bottom_sheet_play_iv"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/btn_editbar_play"
        app:layout_constraintBottom_toTopOf="@+id/bottom_sheet_play_tv"
        app:layout_constraintEnd_toStartOf="@+id/bottom_sheet_playlist_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bottom_sheet_playlist_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:background="@color/transparent"
        android:gravity="center"
        android:text="재생목록"
        android:textColor="@color/white"
        android:textSize="12dp"
        app:layout_constraintEnd_toStartOf="@+id/bottom_sheet_mylist_tv"
        app:layout_constraintStart_toEndOf="@+id/bottom_sheet_play_tv"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bottom_sheet_playlist_iv"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/btn_editbar_addplaylist"
        app:layout_constraintBottom_toTopOf="@+id/bottom_sheet_playlist_tv"
        app:layout_constraintStart_toEndOf="@+id/bottom_sheet_play_iv"
        app:layout_constraintEnd_toStartOf="@+id/bottom_sheet_mylist_iv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bottom_sheet_mylist_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:background="@color/transparent"
        android:gravity="center"
        android:text="내 리스트"
        android:textColor="@color/white"
        android:textSize="12dp"
        app:layout_constraintEnd_toStartOf="@+id/bottom_sheet_delete_tv"
        app:layout_constraintStart_toEndOf="@+id/bottom_sheet_playlist_tv"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bottom_sheet_mylist_iv"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/btn_editbar_mylist"
        app:layout_constraintBottom_toTopOf="@+id/bottom_sheet_playlist_tv"
        app:layout_constraintStart_toEndOf="@+id/bottom_sheet_playlist_iv"
        app:layout_constraintEnd_toStartOf="@id/bottom_sheet_delete_iv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bottom_sheet_delete_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:background="@color/transparent"
        android:gravity="center"
        android:text="삭제"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:paddingBottom="20dp"
        app:layout_constraintStart_toEndOf="@+id/bottom_sheet_mylist_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bottom_sheet_delete_iv"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/btn_editbar_delete"
        app:layout_constraintBottom_toTopOf="@+id/bottom_sheet_playlist_tv"
        app:layout_constraintStart_toEndOf="@+id/bottom_sheet_mylist_iv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>