<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/video_seq_iv"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/btn_player_play"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:rotation="90"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="최신순"
                android:textSize="14dp"
                android:layout_marginEnd="5dp"
                app:layout_constraintEnd_toStartOf="@id/video_seq_iv"
                app:layout_constraintTop_toTopOf="@id/video_seq_iv"
                app:layout_constraintBottom_toBottomOf="@id/video_seq_iv"/>

            <ImageView
                android:id="@+id/video_coin_iv"
                android:layout_width="380dp"
                android:layout_height="220dp"
                android:src="@drawable/img_video_exp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:scaleType="centerInside"
                app:layout_constraintEnd_toEndOf="@id/video_seq_iv"
                app:layout_constraintTop_toBottomOf="@id/video_seq_iv"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/video_coin_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[MV] Coin"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/video_coin_iv"
                app:layout_constraintStart_toStartOf="@id/video_coin_iv"/>

            <TextView
                android:id="@+id/video_coin_singer_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아이유 (IU) | 2021.03.26"
                android:textSize="14dp"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="@id/video_coin_tv"
                app:layout_constraintTop_toBottomOf="@id/video_coin_tv"/>

            <ImageView
                android:id="@+id/video_lilac_iv"
                android:layout_width="380dp"
                android:layout_height="220dp"
                android:src="@drawable/img_video_exp"
                android:layout_marginTop="10dp"
                android:scaleType="centerInside"
                app:layout_constraintEnd_toEndOf="@id/video_coin_iv"
                app:layout_constraintTop_toBottomOf="@id/video_coin_singer_tv"
                app:layout_constraintStart_toStartOf="@id/video_coin_iv"/>

            <TextView
                android:id="@+id/video_lilac_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[MV] 라일락 (LILAC)"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/video_lilac_iv"
                app:layout_constraintStart_toStartOf="@id/video_lilac_iv"/>

            <TextView
                android:id="@+id/video_lilac_singer_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아이유 (IU) | 2021.03.26"
                android:textSize="14dp"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="@id/video_lilac_tv"
                app:layout_constraintTop_toBottomOf="@id/video_lilac_tv"/>

            <ImageView
                android:id="@+id/video_lilac_teaser_iv"
                android:layout_width="380dp"
                android:layout_height="220dp"
                android:src="@drawable/img_video_exp"
                android:layout_marginTop="10dp"
                android:scaleType="centerInside"
                app:layout_constraintEnd_toEndOf="@id/video_lilac_iv"
                app:layout_constraintTop_toBottomOf="@id/video_lilac_singer_tv"
                app:layout_constraintStart_toStartOf="@id/video_lilac_iv"/>

            <TextView
                android:id="@+id/video_lilac_teaser_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[티저] 라일락(LILAC)"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/video_lilac_teaser_iv"
                app:layout_constraintStart_toStartOf="@id/video_lilac_teaser_iv"/>

            <TextView
                android:id="@+id/video_lilac_teaser_singer_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아이유 (IU) | 2021.03.26"
                android:textSize="14dp"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="@id/video_lilac_teaser_tv"
                app:layout_constraintTop_toBottomOf="@id/video_lilac_teaser_tv"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>