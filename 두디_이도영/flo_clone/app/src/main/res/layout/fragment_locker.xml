<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/locker_locker_tv"
        android:layout_width="61dp"
        android:layout_height="46dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:text="보관함"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/locker_login_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인"
        android:textColor="@color/flo"
        android:textSize="14dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/locker_locker_tv"
        app:layout_constraintBottom_toBottomOf="@id/locker_locker_tv"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/locker_seg_tb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tabIndicatorFullWidth="false"
        app:tabSelectedTextColor="@color/flo"
        app:tabIndicatorColor="@color/flo"
        app:tabRippleColor="@color/transparent"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/locker_locker_tv"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/locker_viewpager_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/locker_seg_tb"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>